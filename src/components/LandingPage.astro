---
<main class="flex flex-col items-center justify-start w-full pt-0 overflow-x-hidden min-h-3/4">
    <h1 class="text-4xl text-teal-900 font-extrabold mt-10 mb-2 w-full max-w-xs text-center">PERSONALIZA</h1>
    <h1 class="text-4xl text-teal-900 font-extrabold mb-9 w-full max-w-sm text-center">TUS PRODUCTOS</h1>
    <section class="relative w-full max-w-[450px] h-[530px] mx-auto overflow-x-hidden overflow-hidden">
      <!-- CAMISETA -->
      <a href="/productos">
        <img
          src="/camiseta.webp"
          alt="Camiseta personalizada"
          class="animate-slide-in-bottom-shirt hover:scale-105 transition-transform duration-300
          absolute -top-[57px] sm:-top-[50px] left-[4%]
          w-[60vw] max-w-[260px] sm:w-[260px] md:w-[260px] lg:w-[260px] xl:w-[260px] 2xl:w-[260px]
          h-auto mb-4 -rotate-4 cursor-pointer z-[2] overflow-hidden"
        />
      </a>
      <!-- BOLSA -->
      <a href="/productos">
        <img
          src="/bolsa.webp"
          alt="Bolsa personalizada"
          class="animate-slide-in-bottom-bag hover:scale-105 transition-transform duration-300
          absolute -top-[17px] sm:-top-[10px] -right-[3%]
          w-[50vw] max-w-[220px] sm:w-[220px] md:w-[220px] lg:w-[220px] xl:w-[220px] 2xl:w-[220px]
          h-auto mb-4 rotate-7 cursor-pointer z-[3] overflow-hidden"
        />
      </a>
      <!-- TAZA -->
      <a href="/productos">
        <img
          src="/taza.webp"
          alt="Taza personalizada"
          class="animate-slide-in-bottom-mug hover:scale-105 transition-transform duration-300
          absolute bottom-[58px] sm:bottom-[45px] left-[6%]
          w-[30vw] max-w-[120px] sm:w-[120px] md:w-[120px] lg:w-[120px] xl:w-[120px] 2xl:w-[120px]
          h-auto cursor-pointer z-[6] overflow-hidden"
          loading="lazy"
        />
      </a>
      <!-- BOLA DE NAVIDAD 1-->
      <a href="/productos">
        <img
          src="/bolaVerde.webp"
          alt="Bola de Navidad personalizada"
          class="animate-slide-in-bottom-ball hover:scale-105 transition-transform duration-300
          absolute bottom-[177px] sm:bottom-[170px] left-[37%]
          w-[30vw] max-w-[112px] sm:w-[112px] md:w-[112px] lg:w-[112px] xl:w-[112px] 2xl:w-[112px]
          cursor-pointer z-[6] overflow-hidden"
          loading="lazy"
        />
      </a>
      <!-- CORREA -->
      <a href="/productos">
        <img
          src="/correa.webp"
          alt="Correa de perros personalizada"
          class="animate-slide-in-bottom-belt hover:scale-105 transition-transform duration-300
          absolute top-[165px] sm:top-[165px] left-[5%]
          w-[41vw] max-w-[170px] sm:w-[170px] md:w-[170px] lg:w-[170px] xl:w-[170px] 2xl:w-[170px]
          cursor-pointer -rotate-12 z-[5] overflow-hidden"
          loading="lazy"
        />
      </a>
      <!-- ARNES -->
      <a href="/productos">
        <img
          src="/arnes.webp"
          alt="Correa de perros personalizada"
          class="animate-slide-in-bottom-harness hover:scale-105 transition-transform duration-300
          absolute bottom-[127px] sm:bottom-[120px] right-[8%]
          w-[32vw] max-w-[140px] sm:w-[140px] md:w-[140px] lg:w-[140px] xl:w-[140px] 2xl:w-[140px]
          cursor-pointer -rotate-12 z-[4] overflow-hidden"
          loading="lazy"
        />
      </a>
      <!-- LLAVERO -->
      <a href="/productos">
        <img
          src="/llavero.webp"
          alt="llavero personalizado"
          class="animate-slide-in-bottom-ball hover:scale-105 transition-transform duration-300
          absolute bottom-[42px] sm:bottom-[35px] right-[14%]
          w-[20vw] max-w-[80px] sm:w-[80px] md:w-[80px] lg:w-[80px] xl:w-[80px] 2xl:w-[80px]
          cursor-pointer z-[5] overflow-hidden"
          loading="lazy"
        />
      </a>
    </section>
    <a href="/productos"
    class="fade-in-delayed text-2xl text-white font-bold tracking-wide bg-teal-900 mb-10 px-6 py-3 rounded-full hover:scale-105 transition-all hover:bg-teal-800 duration-300 cursor-pointer">
        Nuestros Productos
    </a>
</main>