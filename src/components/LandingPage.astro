<main class="flex flex-col items-center justify-start w-full min-h-dvh p-4 pt-0">
	<img src="/titulo.webp" alt="" class="w-[500px] h-[250px]" />
	<section class="relative w-[450px] h-[600px]">
		<!-- CAMISETA -->
		<img
			src="/camiseta.webp"
			alt="Camiseta personalizada"
			class="animate-slide-in-bottom-shirt hover:scale-112 transition-transform duration-550 
			absolute -top-[50px] left-[0%]
			w-[300px] h-auto mb-4 -rotate-4 cursor-pointer"
		/>
		<!-- BOLSA -->
		<img
			src="/bolsa.webp"
			alt="Bolsa personalizada"
			class="animate-slide-in-bottom-bag hover:scale-112 transition-transform duration-550 
			absolute -top-[10px] right-[0%]
			w-[260px] h-auto mb-4 rotate-7 cursor-pointer"
		/>
		<!-- TAZA -->
		<img
			src="/taza.webp"
			alt="Taza personalizada"
			class="animate-slide-in-bottom-mug hover:scale-112 transition-transform duration-550 
			absolute bottom-[93px] right-[8%] sm:right-[8%] md:right-[4%] lg:right-[3%] xl:right-[2%] 
			w-[170px] h-auto cursor-pointer"
		/>
		<!-- BOLA DE NAVIDAD -->
		<img
			src="/bolaNavidad.webp"
			alt="Bola de Navidad personalizada"
			class="animate-slide-in-bottom-ball hover:scale-112 transition-transform duration-550 
			absolute bottom-[93px] left-[0%] sm:left-[0%] md:left-[0%] lg:left-[0%] xl:-left-[5%] 
			w-52 cursor-pointer"
		/>
	</section>
</main>